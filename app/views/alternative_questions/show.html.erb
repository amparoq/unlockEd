      <h3 style="margin-right: 15px;"><b>Tarea</b></h3> 
      <h3><b><%= current_user.task_number %></b></h3>
      <h5 style= "margin-top: 5px; margin-left: 20px;">Simple</h5> 
      <% if @error_counter == 2 %>
