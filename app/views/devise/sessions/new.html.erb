<style>
.divider:after,
.divider:before {
  content: "";
  flex: 1;
  height: 1px;
  background: #eee;
}
.h-custom {
  height: calc(100% - 73px);
}
@media (max-width: 450px) {
  .h-custom {
  height: 100%;
  }
}
</style>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'card mx-auto mt-auto mb-0 d-flex align-items-center', style: 'width: 150vh; align-items: center;' }) do |f| %>
  <section class="vh-100">
  <div style="margin-top: 80px; display: flex; justify-content: center; margin-bottom: -60px;">
    <h1 style="font-style: italic; font-size: 80px;"><b>¡Bienvenido!</b></h1>
  </div>
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-6">
        <%= image_tag "logo_white.webp", style: "height: 100%; width: 100%;" %>
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
          <!-- Email input -->
          <div class="form-outline mb-4">
            <%= f.label :email, class: 'form-label', for: 'form2Example1' %>
            <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: "form-control form-control-lg", id: 'form2Example1' %>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
            <%= f.label :password, class: 'form-label', for: 'form2Example2' %>
            <%= f.password_field :password, autocomplete: 'current-password', class: "form-control form-control-lg", id: 'form2Example2' %>
          </div>


          <div class="d-flex justify-content-between align-items-center">
            <!-- Checkbox -->
            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-0">
                <%= f.check_box :remember_me, class: 'form-check-input me-2', id: 'form2Example31' %>
                <%= f.label :remember_me, class: 'form-check-label', for: 'form2Example31' do %>
                  Remember me
              <% end %>
              </div>
            <% end %>
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
            <%= f.submit 'Sign in', class: "btn btn-primary btn-lg", style: "padding-left: 2.5rem; padding-right: 2.5rem;"%>
            <p class="small fw-bold mt-2 pt-1 mb-0">¿Todavía no tienes una cuenta? <a href = "/users/sign_up"
                class="link-danger">¡Registrate!</a></p>
          </div>

        </form>
      </div>
    </div>
  </div>
</section>
<% end %>