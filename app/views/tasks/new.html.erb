<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<%= form_for @task do |f| %>
  <%= f.label :module, "Tema" %>
  <%= f.select :module, options_for_select([["Entalpía", 0], ["Tablas de Saturación", 1], ["Calor Latente", 2], ["Diagrama de fases", 3], ["Calidad de mezclas", 4]], selected: f.object.module), {}, class: "form-control", id: "exampleFormControlSelect1" %>

  <%= f.label :complexity, "Dificultad" %>
  <%= f.select :complexity, options_for_select([["Baja", 0], ["Media", 1], ["Alta", 2]], selected: f.object.module), {}, class: "form-control", id: "exampleFormControlSelect1" %>

  <%= f.label :cant_preguntas, "Cantidad de preguntas" %>
  <%= f.select :cant_preguntas, options_for_select([[3, 3], [4, 4], [5, 5], [6, 6]], selected: f.object.module), {}, class: "form-control", id: "exampleFormControlSelect1" %>

  <%= f.submit 'Create Task', class: 'btn btn-success' %>
<% end %>
